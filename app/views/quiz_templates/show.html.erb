<nav aria-label="breadcrumb">
  <ul>
    <li>
      <a href="/">
        <%= current_user.username %>'s quizzes
      </a>
    </li>
    <li>
      <%= @the_quiz.topic %>
    </li>
  </ul>
</nav>

<article>
  <div>
    <a href="/quizzes">
      Go back
    </a>
  </div>

  <div>
    <a href="/delete_quiz/<%= @the_quiz.id %>">
      Delete quiz
    </a>
  </div>
  <dl>
    <dt>
      Topic
    </dt>
    <dd>
      <%= @the_quiz.topic %>
    </dd>

    <dt>
      Score
    </dt>
    <dd>
      <%= @the_quiz.score %>
    </dd>

    <dt>
      Created at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_quiz.created_at) %> ago
    </dd>
  </dl>
</article>

<ul>
  <% existing_messages = @the_quiz.messages.order(:created_at) %>

  <% existing_messages.each do |something| %>
    <li>
      <%= something.content %>
    </li>
  <% end %>
</ul>

<form action="/insert_message" method="post">

  <input type="hidden" id="quiz_id_box" name="query_quiz_id" value="<%= @the_quiz.id %>">

  <div>
    <label for="content_box">
      Content
    </label>

    <textarea id="content_box" name="query_content"></textarea>
  </div>

  <button type="submit">
    Create message
  </button>
</form>
